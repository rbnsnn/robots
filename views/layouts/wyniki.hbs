<form action="/wyniki/generuj" method="post">
    <div class="row d-flex justify-content-center mx-auto text-center mt-5 mb-5 w-50">
        <div class="col-md-12">
            <button class="btn btn-primary btn-lg" name="generate-button">Generuj</button>
        </div>
        <input type="number" id="amount" name="amount" class="form-control w-25 mt-3" placeholder="Liczba rekordów">
    </div>
</form>

{{#if emptyRecords}}
<div class="row d-flex justify-content-center text-center">
    <div class="col-md-12">
        <div class="error-template">
            <h1 class="text-danger">Brak rekordów w bazie danych!</h1>
        </div>
    </div>
</div>
{{/if}}

{{#if dataError}}
<div class="d-flex justify-content-center text-center mb-5">
    <div class="error-template w-50">
        <h1 class="text-danger">Podano złą wartość!</h1>
    </div>
</div>
{{/if}}



{{#if data}}
<div class="container container-lg">
    <table class="table">
        <thead class="table-dark">
            <th scope="col">ID</th>
            <th scope="col">Czas produkcji</th>
            <th scope="col">Ilość części</th>
            <th scope="col">Efektywność</th>

        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <th scope="row" class="robot-id">{{this.id}}</th>
                <td class="production-time">{{this.productionTime}}</td>
                <td class="produced-parts">{{this.producedParts}}</td>
                <td class="effectivity">{{this.effectivity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}

{{#each mostEffective}}
<div class="container container-lg text-center mt-5 mb-5">
    <h2>Najbardziej efektywny jest robot o <b>ID:{{this.id}}</b></h1>
</div>
{{/each}}
<div class="row container container-lg mx-auto">
    <div class="col-lg-6">
        <canvas id="pieChart"></canvas>
    </div>
    <div class="col-lg-6">
        <canvas id="barChart"></canvas>
    </div>
</div>
<script src="http://localhost:3000/javascripts/sort.js"></script>
<script src="http://localhost:3000/javascripts/chart.js"></script>