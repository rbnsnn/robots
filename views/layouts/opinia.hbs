<div class="container container-lg d-flex flex-column justify-content-center">


    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>

    <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Please do not hesitate to contact us
        directly. Our team will come back to you within
        a matter of hours to help you.</p>

    <div class="container d-flex justify-content-center w-75">

        <div class="col-md-9 mb-md-0 mb-5">
            <form id="opinion-form" name="opinion-form" class="opinion-form" method="post">


                <div class="row mb-3">

                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control mb-2">
                            <label for="name" class="">Imię i nazwisko</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="email" name="email" class="form-control mb-2">
                            <label for="email" class="">Adres email</label>
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-12">

                        <div class="md-form">
                            <textarea type="text" id="message" name="message" rows="2"
                                class="form-control md-textarea mb-2"></textarea>
                            <label for="message">Treść wiadomości</label>
                        </div>

                    </div>
                </div>
                <div class="text-center text-md-left">
                    <a class="btn btn-primary opinion-button">Wyślij</a>
                </div>
            </form>
        </div>
    </div>

</div>
{{#if sended}}
<div class="d-flex justify-content-center text-center mt-5">
    <div class="error-template w-50">
        <h1 class="text-success">Pomyślnie wysłano!</h1>
    </div>
</div>
{{/if}}
<script src="http://localhost:3000/javascripts/validate.js"></script>